<Window x:Class="LB2_2_Alkhimovich.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LB2_2_Alkhimovich"
        mc:Ignorable="d"
        Title="Добавление данных" Height="170" Width="300" ResizeMode="NoResize" Top="170" Left="650">
    <Grid>
        <TextBox x:Name="NewValue" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="280" Height="25" FontSize="14"/>
        <Label Content="Введите новые данные:" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="28"/>
        <Button Content="Добавить" HorizontalAlignment="Center" Margin="0,104,0,0" VerticalAlignment="Top" Click="RunLoadDataMethod" />
    </Grid>
</Window>
